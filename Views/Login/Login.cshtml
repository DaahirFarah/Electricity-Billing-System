
@model EBS.viewModels.UserVm

@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";

    ViewBag.Title = "Login | Somali Electric";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- Font Awesome CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
    <style>
        .vh-100 {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: Verdana, Geneva, Tahoma, sans-serif;
        }

        .card {
            border-radius: 1rem;
        }
    </style>
    <title>Login Form</title>
</head>
<body>

    @using (Html.BeginForm("Login", "Login", FormMethod.Post))
    {
        @Html.AntiForgeryToken()


        <section id="cardd" class="vh-100 gradient-custom;" style="font-family: Verdana, Geneva, Tahoma, sans-serif; ">
            <div class="container py-5 h-100">
                <div class="row justify-content-center align-items-center h-100">

                    <div class="col-12 col-lg-9 col-xl-7">
                        <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">

                            <div class="card-body p-4 p-md-5">
                                <h2 class="mb-4 pb-2 pb-md-0 mb-md-5" style="align-content:center"><strong>User Login</strong></h2>

                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                <div>

                                    <div class="form-outline form-group">

                                        @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control form-control-lg" } })
                                        @Html.LabelFor(m => m.Username)
                                        @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                                    </div>

                                </div>
                                <div>

                                    <div class="form-outline form-group">
                                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control form-control-lg" } })
                                        @Html.LabelFor(model => model.Password)
                                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                    </div>

                                </div>



                                <div class="col-md-6 mb-4 pb-2" style="align-content:center">
                                    <button type="submit" value="Login" class="btn btn-primary btn-lg btn-block">Sign In</button>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

    }

</body>
</html>
