<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- Font Awesome CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
    <style>
        .vh-100 {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: Verdana, Geneva, Tahoma, sans-serif;
        }

        .card {
            border-radius: 1rem;
        }
    </style>
    <title>Login Form</title>
</head>
<body>
    <section class="vh-100">
        <div class="container">
            <div class="row justify-content-center align-items-center">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-body p-4 p-lg-5 text-black">
                            <div class="d-flex align-items-center mb-3 pb-1">
                                @*<i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>*@
                                @*<span class="h1 fw-bold mb-0">Logo Later</span>*@
                            </div>
                            <h2 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px; text-align:center">Sign into your account</h2>
                            <form>
                                <div class="form-outline mb-4">
                                    <input type="email" id="form2Example17" class="form-control form-control-lg" style="display" />
                                    <label class="form-label" for="form2Example17">Username</label>
                                </div>
                                <div class="form-outline mb-4">
                                    <input type="password" id="form2Example27" class="form-control form-control-lg" />
                                    <label class="form-label" for="form2Example27">Password</label>
                                </div>
                                <div class="pt-1 mb-4">
                                    @Html.ActionLink("Login", "Index", "Customer", null, new { @class = "btn btn-primary btn-lg btn-block" })
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>
