
@model List<EBS.viewModels.payVM>

@{
    ViewBag.Title = "Invoices | SEC";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<!DOCTYPE html>

<html>
<head>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- DataTables -->
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap4.min.js"></script>

    <!-- Bootstrap -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap4.min.css" rel="stylesheet" />

    <style>
        .content {
            display: flex;
            justify-content: center;
            padding: 20px; /* Add padding around the table */
        }

        .table-container {
            max-width: 700px; /* Set a maximum width for the table container */
            width: 10%;
            padding-top: 20px;
        }

        .container {
            padding-top: 30px;
            padding-left: 45px;
            padding-bottom: 20px;
        }
    </style>

    <title>Payments | SEC</title>


</head>
<body>

    @*<div class="mt-4 pt-2" style="padding-left: 40px;">
            <form action="@Url.Action("GenerateInvoice", "Invoice")" method="get">
                <input class="btn btn-secondary btn-lg btn-block" type="submit" value="Download Invoices" />
            </form>
        </div>*@

    <div class="mt-4 pt-2" style="padding-left: 40px;">
        <form action="@Url.Action("Create", "Payment")" method="get">
            <input class="btn btn-primary btn-lg btn-block" type="submit" value="Record New Payment" />
        </form>
    </div>
    <div class="container">
        <table id="myTable" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Payment ID</th>
                    <th>Customer ID</th>
                    <th>Invoice ID</th>
                    <th>Payment Amount ($)</th>
                    <th>Total Fee ($)</th>
                    <th>Payment Method</th>
                    <th>Payment Date</th>
                    <th>Actions</th>


                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>

                        <td>@Html.DisplayFor(model => item.payID)</td>
                        <td>@Html.DisplayFor(model => item.cID)</td>
                        <td>@Html.DisplayFor(model => item.invoiceID)</td>
                        <td>@Html.DisplayFor(model => item.paidAmount)</td>
                        <td>@Html.DisplayFor(model => item.totalFee)</td>
                        <td>@Html.DisplayFor(model => item.payMethod)</td>
                        <td>@(item.payDate.Date.ToString("d"))</td>
                        <td>
                            <a href="@Url.Action("Edit", "Payment", new { id = item.payID })">
                                <i class="fa-solid fa-square-pen fa-2x" style="color: #1ABC9C; "></i>
                            </a>

                            <a href="@Url.Action("Delete", "Payment", new { id = item.payID })">
                                <i class="fas fa-trash fa-2x delete-icon item" style="color: #FF5733"></i>
                            </a>

                        </td>
                    </tr>
                }



            </tbody>
        </table>
    </div>


    <script>
        new DataTable('#myTable');
    </script>

</body>
</html>
