    <!--Validation For Date In Invoices-->
    <script>
        $(document).ready(function () {
            $("#rDate").blur(function () {
                var enteredDate = new Date($(this).val());
                var currentDate = new Date();
                var lastDayOfMonth = new Date(currentDate.getFullYear(), currentDate.getMonth() + 1, 0);
