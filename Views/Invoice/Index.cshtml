        <table id="myTable" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Invoice ID</th>
                    <th>Customer ID</th>
                    <th>Previous Reading</th>
                    <th>Current Reading</th>
                    <th>Reading Date</th>
                    <th>Rate ($)</th>
                    <th>Usage (KwH)</th>
                    <th>Total Amount ($)</th>
                    <th>Actions</th>

