<body style="font-family: Verdana, Geneva, Tahoma, sans-serif; background-color: #EEF1F6">


    <aside class="sidebar">
        <div class="toggle">
            <a href="#" class="burger js-menu-toggle" data-toggle="collapse" data-target="#main-navbar">
                <span></span>
            </a>
        </div>
        <div class="side-inner">

            <div class="logo-wrap">
                <div class="logo">
                    <span>SEC</span>
                </div>
                <span class="logo-text">Som Electric</span>
            </div>


            <div class="nav-menu">
                <ul>
                    <li class="menu-item" id="dashboard"><a href="/Dashboard/Index" class="d-flex align-items-center"><span class="wrap-icon icon-dashboard mr-3"></span><span class="menu-text">Dashboard</span></a></li>
                    <li class="menu-item" id="customers"><a href="/Customer/Index" class="d-flex align-items-center"><span class="wrap-icon icon-person mr-3"></span><span class="menu-text">Customers</span></a></li>
                    <li class="menu-item" id="invoices"><a href="/Invoice/Index" class="d-flex align-items-center"><span class="wrap-icon icon-receipt mr-3"></span><span class="menu-text">Invoices</span></a></li>
