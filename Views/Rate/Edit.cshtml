
@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Update Rate | SEC</title>
    <link href="~/Content/Registeration.css" rel="stylesheet" />

</head>
<body>

    <section class="vh-100 gradient-custom;" ; style="font-family: Verdana, Geneva, Tahoma, sans-serif; ">
        <div class="container py-5 h-100">
            <div class="row justify-content-center align-items-center h-100">

                <div class="col-12 col-lg-9 col-xl-7">
                    <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">

                        <div class="card-body p-4 p-md-5">
                            <h2 class="mb-4 pb-2 pb-md-0 mb-md-5"><strong>Update Rate Per Unit (KwH)</strong></h2>
                            <form>

                                <div class="row">
                                    <div class="col-md-12 mb-4">

                                        <div class="form-outline">
                                            <input type="number" step="0.01" id="rateperunit" class="form-control form-control-lg" />
                                            <label class="form-label" for="rateperunit">Rate Per Unit (KwH)</label>
                                        </div>

                                    </div>
                                   
                                </div>

                               

                                <div class="row">
                                    <div class="col-md-6 mb-4 pb-2">
                                        <input class="btn btn-primary btn-lg btn-block" type="button" value="Update" />
                                    </div>


                                    <div class="col-md-6 mb-4 pb-2">
                                        @Html.ActionLink("Back", "Index", "Rate", null, new { @class = "btn btn-secondary btn-lg btn-block" })
                                    </div>

                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


</body>
</html>
